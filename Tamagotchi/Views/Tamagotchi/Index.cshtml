@using Tamagotchi.Models;

<h1>Tamagotchi</h1>
<ul>

@if (Model.Count == 0)
{
  <p>You have no Tamagotchi pets yet!</p>
}
@if(Model.Count != 0)
{
  @foreach (Pet item in Model)
  {
  <li><a href='/tamagotchi/@item.GetId()'>@item.GetName()</a></li>
  }
}

</ul>
<a href="/tamagotchi/new">Add a new pet.</a>
